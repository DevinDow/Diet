<p id="notice"><%= notice %></p>

<h1>Days</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Plan</th>
      <th>Fitness</th>
      <th>Bms</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= link_to day.pp, day %></td>
        <td><%= day.plan %></td>
        <td><%= day.fitness %></td>
        <td><%= day.bms %></td>
        <td><%= day.notes %></td>
        <td><%= button_to 'Edit', edit_day_path(day), options = { method: :get } %></td>
        <td><%= button_to 'X', day, options = { method: :delete, data: { confirm: 'Are you sure?' } } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

