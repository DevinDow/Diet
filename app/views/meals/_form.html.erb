<%= simple_form_for(@meal, url: @meal.new_record? ? day_meals_path : @meal) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2><%= @day.day_string %></h2>

  <table>
    <thead>
      <tr>
        <td><strong><%= form.label "Time (minutes since midnight)" %></strong></td>
        <td><strong><%= form.label :foods %></strong></td>
        <td><strong><%= form.label "Veggies" %></strong></td>
        <td><strong><%= form.label "Fruits" %></strong></td>
        <td><strong><%= form.label "Proteins" %></strong></td>
        <td><strong><%= form.label "Carbs" %></strong></td>
        <td><strong><%= form.label "Fats" %></strong></td>
        <td><strong><%= form.label "Seeds" %></strong></td>
        <td><strong><%= form.label "Oils" %></strong></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="time"><%= form.input_field :minutes_since_midnight %> = <%= @meal.time_string  %></td>
        <td class="foods"><%= form.text_field :foods %></td>
        <%= form.input_field :categories, as: :array %>
        <td><%= form.submit %></td>
      </tr>
    </tbody>
  </table>

<% end %>
