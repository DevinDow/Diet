<p id="notice"><%= notice %></p>

<h2>Meals for <%= @day.date %></h2>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Foods</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.time %></td>
        <td><%= meal.foods %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_day_meal_path %>
